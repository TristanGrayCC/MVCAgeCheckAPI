@model MVCAgeCheck.Dtos.UserDto

@{
    ViewBag.Title = "Login";
    Layout = "_Layout";
}

@using (Html.BeginForm("Login", "User", FormMethod.Post))
{
    <div class="form-container">
        <div class="form-group">
            @Html.LabelFor(m => m.Name, htmlAttributes: new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Name, htmlAttributes: new { @class = "control-input" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Email, htmlAttributes: new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Email, htmlAttributes: new { @class = "control-input" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.DateOfBirth, htmlAttributes: new { @class = "control-label" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.DateOfBirth, new { htmlAttributes = new { @class = "form-control, control-input" } })
            </div>
        </div>
        <input class="submit-button" type="submit" value="Login" />
    </div>
}