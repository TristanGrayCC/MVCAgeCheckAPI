@model MVCAgeCheck.Dtos.UserDto

@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm("Login", "User", FormMethod.Post))
{

    <div class="form-group">
        @Html.LabelFor(m => m.Name, htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.TextBoxFor(m => m.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email, htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.TextBoxFor(m => m.Email)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DateOfBirth, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.DateOfBirth, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <input type="submit" value="Login" />
}

@section Styles {
    <link href="@Url.Content("~/Content/Main.css")" rel="stylesheet" type="text/css" />
}